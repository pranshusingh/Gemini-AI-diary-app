<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:cardBackgroundColor="@color/white"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <View
                android:layout_width="8dp"
                android:layout_height="match_parent"
                android:background="@color/darktheme"
                android:id="@+id/view"
                android:layout_alignParentStart="true"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:orientation="vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">

            <TextView
                android:id="@+id/text_task_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp"
                android:text="Task Name"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="16dp"/>

            <TextView
                android:id="@+id/text_task_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Task Date"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:layout_below="@id/text_task_name"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_task_date"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/text_task_priority"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Priority: "
                    android:textSize="14sp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/lighttheme"
                    android:layout_alignParentStart="true"
                    />

                <CheckBox
                    android:layout_gravity="end"
                    android:id="@+id/checkbox_completed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Completed"
                    android:textColor="@color/darktheme"
                    />
            </LinearLayout>
        </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>